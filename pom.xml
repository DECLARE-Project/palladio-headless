<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.fabiankeller.palladio-headless</groupId>
    <artifactId>palladio-headless</artifactId>
    <version>0.1.0</version>
    <packaging>pom</packaging>

    <name>Palladio Headless</name>
    <description>Interact with Palladio using Java without having an Eclipse environment.</description>
    <url>https://github.com/SQuAT-Team/palladio-lqns-headless</url>

    <modules>
        <module>palladio-builder</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <ph.updateSite.palladio>https://sdqweb.ipd.kit.edu/eclipse/palladiosimulator/releases/1.0.7
        </ph.updateSite.palladio>
        <ph.updateSite.eclipse>http://download.eclipse.org/releases/mars/</ph.updateSite.eclipse>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>de.fabiankeller.palladio-headless</groupId>
                <artifactId>palladio-headless</artifactId>
                <version>0.1.0</version>
            </dependency>
            <dependency>
                <groupId>de.fabiankeller.palladio-headless</groupId>
                <artifactId>palladio-bridge</artifactId>
                <version>0.2.0</version>
            </dependency>

            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.12</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>palladio-headless-mvn-repo</id>
            <url>https://raw.github.com/FaKeller/palladio-headless-bridge-mvn/mvn-repo/</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
            </snapshots>
        </repository>
    </repositories>
</project>